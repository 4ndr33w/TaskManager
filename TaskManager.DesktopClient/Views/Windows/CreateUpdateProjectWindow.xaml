<Window x:Class="TaskManager.DesktopClient.Views.Windows.CreateUpdateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager.DesktopClient.Views.Windows"
        xmlns:taskManagerEnums="clr-namespace:TaskManager.Models.Enums;assembly=TaskManager.Models"
        xmlns:mainCommands="clr-namespace:TaskManager.DesktopClient.Resources.Commands.MainApplicationCommands"
        xmlns:commands="clr-namespace:TaskManager.DesktopClient.Resources.Commands.MainWindowCommands"
        xmlns:importImage="clr-namespace:TaskManager.DesktopClient.Resources.Commands.Common"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource WindowBackground}"
        x:Name="CreateEditProjectWindow"
        Title="CreateUpdateProjectWindow" Height="450" Width="350">
    <Window.Resources>
        <ObjectDataProvider x:Key="EnumData" MethodName="GetValues" ObjectType="{x:Type taskManagerEnums:ProjectStatus}">
            <ObjectDataProvider.MethodParameters >
                <x:Type TypeName="taskManagerEnums:ProjectStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <mainCommands:CloseLocalWindow x:Key="CloseLocalWindow"/>
        <commands:CreateNewProjectCommand x:Key="CreateNewProjectCommand"/>
        <importImage:GetPictureOpenFileDialogCommand x:Key="GetPictureOpenFileDialogCommand"/> 
    </Window.Resources>
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource TextBlockHeader}" Text="Project" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" Margin="0,0,10,0" Style="{StaticResource CommonTextBlockStyle}" HorizontalAlignment="Right"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="ProjectNameTextBox" Text="{Binding SelectedProject.Model.Name}" Margin="5,0,5,0" Style="{StaticResource CommonTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Width="Auto" Text="Description:" Margin="0,0,10,0" Style="{StaticResource CommonTextBlockStyle}" HorizontalAlignment="Right"/>
                    <TextBox Grid.Row="1" x:Name="ProjectDescriptionTextBox" Grid.Column="1" Text="{Binding SelectedProject.Model.Description}" Margin="5,0,5,0" Style="{StaticResource MultiLineTextBox}" HorizontalAlignment="Stretch"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Image:" Margin="0,0,10,0" Style="{StaticResource CommonTextBlockStyle}" HorizontalAlignment="Right"/>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Grid.Column="0" Source="{Binding SelectedProject.Image}"/>
                        <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource CommonButtonStyle}" Command="{StaticResource GetPictureOpenFileDialogCommand}" CommandParameter="{Binding ElementName=CreateEditProjectWindow}" Content="Select Picture"></Button>
                    </Grid>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Project Status:" Margin="0,0,10,0" Style="{StaticResource CommonTextBlockStyle}" HorizontalAlignment="Right"/>
                    <ComboBox Grid.Row="3" 
                       Grid.Column="1"                        Background="Transparent"
                       Foreground="DarkGray"
                       ItemsSource="{Binding Source={StaticResource EnumData}}" 
                       SelectedItem="{Binding SelectedProject.Model.ProjectStatus}"
                       x:Name="ProjectStatusComboBox"
                       >
                    </ComboBox>

                </Grid>
            </ScrollViewer>

        </Grid>
        <StackPanel Orientation="Horizontal" Margin="0,50,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Cancel" Command="{StaticResource CloseLocalWindow}" Margin="0,0,10,0" Style="{StaticResource CommonButtonStyle}" Width="100"/>
            <Button Content="OK" Command="{Binding CreateNewProjectCommand}" CommandParameter="{Binding ElementName=CreateEditProjectWindow}" Margin="10,0,0,0" Style="{StaticResource CommonButtonStyle}" Width="100"/>
        </StackPanel>
    </StackPanel>
</Window>
