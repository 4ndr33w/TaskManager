<UserControl x:Class="TaskManager.DesktopClient.Views.Components.Buttons.NavButtonComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManager.DesktopClient.Views.Components.Buttons"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Button Background="Transparent" Command="{Binding Value}" HorizontalAlignment="Stretch">
                <DockPanel LastChildFill="True" HorizontalAlignment="Stretch">
                    <TextBlock DockPanel.Dock="Left" 
                               Margin="10,1,1,1"
                               Width="120"
                               Text="{Binding Key}" 
                               Style="{StaticResource CommonTextBlockStyle}" 
                               HorizontalAlignment="Stretch"/>
                    <TextBox DockPanel.Dock="Right" 
                             HorizontalAlignment="Right" 
                             Style="{StaticResource CommonTextBoxStyle}" 
                             Background="Gray" 
                             BorderBrush="DarkGray" 
                             Text="{Binding Path=CurrentUser.ProjectsIds.Count}"
                             Padding="15,0,15,0"></TextBox>
                    <!--Text="{Binding Path=CurrentUser.ProjectsIds.Count}"-->
                        <!--<TextBox.DataContext>
                            <Binding Source="{Binding CurrentUser.ProjectsIds.Count}"/>
                        </TextBox.DataContext>-->
                    <!--</TextBox>-->
                    <Label Content=" "/>
                </DockPanel>
            </Button>
            
        </StackPanel>
    </Grid>
</UserControl>
