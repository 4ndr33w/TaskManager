<Page x:Class="TaskManager.DesktopClient.Views.Pages.ProjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.DesktopClient.Views.Pages"
      xmlns:commands="clr-namespace:TaskManager.DesktopClient.Resources.Commands.MainWindowCommands"
      mc:Ignorable="d" 
      x:Name="projectPage"
      Title="ProjectsPage">
    <Page.Resources>
        <commands:CreateNewProjectCommand x:Key="CreateNewProjectCommand"/>
        <commands:OpenCreationProjectWindowCommand x:Key="OpenCreationProjectWindowCommand"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" MinWidth="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Content="New Project"
                    Margin="10,5,30,5"
                    Command="{Binding OpenNewProjectPageCommand}">
                <Button.Style>
                    <Style TargetType="Button" 
                           BasedOn="{StaticResource CommonButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding UserStatus}" Value="User">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Height" Value="0"/>
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          x:Name="projectsScrollViewer">
                <ItemsControl ItemsSource="{Binding ProjectsCollection, UpdateSourceTrigger=PropertyChanged}" 
                              x:Name="projectsUpperItemControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:Name="projectsDataTemplate">
                            <Button  
                                    BorderBrush="White" 
                                    BorderThickness="1"
                                    x:Name="ProjectsButton"
                                    Height="200"
                                    Command="{Binding Path=DataContext.ShowProjectInfoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding Path=Model.Image}" Opacity="90"/>
                                </Button.Background>
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource CommonButtonStyle}">
                                        <!--<Style.Triggers>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Visibility" TargetName="{Binding ElementName=AddUsersButton}" Value="Visible"/>

                                            </Trigger>
                                        </Style.Triggers>-->
                                    </Style>
                                </Button.Style>
                                    
                                <StackPanel Margin="10" 
                                                Width="150" 
                                                Height="150">
                                        <TextBlock Text="{Binding Path=Model.Name}" 
                                                   Style="{StaticResource CommonTextBlockStyle}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Users: " 
                                                       Style="{StaticResource CommonTextBlockStyle}"/>
                                            <TextBlock Text="{Binding Path=Model.UsersIds.Count}" 
                                                       Style="{StaticResource CommonTextBlockStyle}"/>
                                        </StackPanel>
                                    <StackPanel>
 
                                        <Button Content="Add users" 
                                                x:Name="AddUsersButton"
                                                Command="{Binding Path=DataContext.AddUsersToProjectCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}">
                                            <!--<Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource CommonButtonStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=projectsUpperItemControl.SelectedItem}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>-->
                                        </Button>
                                        
                                        <Button Content="Edit" 
                                                x:Name="EditProjectButton"
                                                Style="{StaticResource CommonButtonStyle}" 
                                                Command="{Binding Path=DataContext.OpenEditProjectPageCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}">
                                        </Button>
                                        <Button Content="Delete" 
                                                x:Name="DeleteProjectButton"
                                                Command="{Binding Path=DataContext.DeleteProjectCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource CommonButtonStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=DataContext.IsUserAdminOrProjectAdmin, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Setter Property="Height" Value="0"/>
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                   
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="1" 
              Margin="10,5,10,5" 
              MinWidth="200">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedProject}" 
                                     Value="{x:Null}">
                            <Setter Property="Visibility" 
                                    Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" 
                       Text="{Binding SelectedProject.Model.Name}" 
                       Style="{StaticResource CommonTextBlockStyle}"/>
            <TextBlock Grid.Row="1" 
                       Text="{Binding SelectedProject.Model.Description}" 
                       Style="{StaticResource CommonTextBlockStyle}"/>
            <Button Grid.Row="2" 
                    Content="Add User" 
                    Style="{StaticResource CommonButtonStyle}"/>
            <Button Grid.Row="3" 
                    Content="Desks" 
                    Style="{StaticResource CommonButtonStyle}"/>
            <ListBox Grid.Row="4" 
                     x:Name="projectUsersListBox" 
                     ItemsSource="{Binding ProjectUsers}" 
                     Background="Transparent" 
                     Foreground="White">
                <DataTemplate>
                    <TextBlock Style="{StaticResource CommonTextBlockStyle}" 
                               Text="{Binding Path=Email}"/>
                </DataTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Page>
