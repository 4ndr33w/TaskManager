<Page x:Class="TaskManager.DesktopClient.Views.Pages.ProjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.DesktopClient.Views.Pages"
      mc:Ignorable="d" 
      x:Name="projectPage"
      Title="ProjectsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" MinWidth="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Content="New Project"
                    Command="{Binding OpenNewProjectCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource CommonButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding UserStatus}" Value="User">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Height" Value="0"/>
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ProjectsCollection}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ProjectPanelBorder}">
                                <StackPanel Margin="10">
                                    <TextBlock Text="{Binding Path=Model.Name}" Style="{StaticResource CommonTextBlockStyle}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Users: " Style="{StaticResource CommonTextBlockStyle}"/>
                                        <TextBlock Text="{Binding Path=Model.UsersIds.Count}" Style="{StaticResource CommonTextBlockStyle}"/>
                                    </StackPanel>
                                    <Image Source="{Binding Path=Image}" Width="100" Height="100"/>
                                    <Button Content="Open" 
                                            Style="{StaticResource CommonButtonStyle}" 
                                            Command="{Binding Path=DataContext.OpenNewProjectCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                            CommandParameter="{Binding}">

                                    </Button>
                                    <Button Content="Edit" 
                                            Style="{StaticResource CommonButtonStyle}" 
                                            Command="{Binding Path=DataContext.OpenUpdateProjectCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}">

                                    </Button>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="1" MinWidth="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="{Binding SelectedProject.Model.Name}" Style="{StaticResource CommonTextBlockStyle}"/>
            <TextBlock Grid.Row="1" Text="{Binding SelectedProject.Model.Description}" Style="{StaticResource CommonTextBlockStyle}"/>
            <Button Grid.Row="2" Content="Add User" Style="{StaticResource CommonButtonStyle}"/>
            <Button Grid.Row="3" Content="Desks" Style="{StaticResource CommonButtonStyle}"/>
            <ListBox Grid.Row="4" x:Name="projectUsersListBox" ItemsSource="{Binding ProjectUsers}" Background="Transparent" Foreground="White">
                <DataTemplate>
                    <TextBlock Style="{StaticResource CommonTextBlockStyle}" Text="{Binding Path=Email}"/>
                </DataTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Page>
