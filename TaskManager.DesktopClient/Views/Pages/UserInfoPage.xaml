<Page x:Class="TaskManager.DesktopClient.Views.Pages.UserInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.DesktopClient.Views.Pages"
      mc:Ignorable="d"
      HorizontalAlignment="Stretch"
      Title="UserInfoPage">

    <Grid HorizontalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Stretch" 
                    VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal">
                
                <Image Grid.Column="0" 
                       x:Name="mainImage" 
                       Width="200" 
                       Height="200" 
                       Source="{Binding CurrentUser.Image}">
                </Image>

                <StackPanel VerticalAlignment="Center" 
                            Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Email:  " 
                                   Style="{StaticResource CommonTextBlockStyle}"/>
                        <TextBlock Text="{Binding CurrentUser.Email}" 
                                   Style="{StaticResource CommonTextBlockStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Status:  " 
                                   Style="{StaticResource CommonTextBlockStyle}"/>
                        <TextBlock Text="{Binding CurrentUser.UserStatus}" 
                                   Style="{StaticResource CommonTextBlockStyle}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Visibility="Hidden">
                        <Button Content="change email" 
                                IsEnabled="False" 
                                Style="{StaticResource CommonButtonStyle}" 
                                Padding="5,0,5,0" Margin="5"/>
                        <Button Content="change password" 
                                IsEnabled="False" 
                                Style="{StaticResource CommonButtonStyle}" 
                                Padding="5,0,5,0" Margin="5"/>
                    </StackPanel>
                    <Button Content="change image" 
                            Visibility="Hidden" 
                            IsEnabled="False" 
                            Style="{StaticResource CommonButtonStyle}"/>
                </StackPanel>
            </StackPanel>

            <Border BorderThickness="0,0,0,1" 
                    Style="{StaticResource CommonBorderStyle}" 
                    VerticalAlignment="Top"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name:  " 
                           Style="{StaticResource CommonTextBlockStyle}"/>
                <TextBlock Text="{Binding CurrentUser.Name}" 
                           Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Last Name:  " 
                           Style="{StaticResource CommonTextBlockStyle}"/>
                <TextBlock Text="{Binding CurrentUser.LastName}" 
                           Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Phone:  " 
                           Style="{StaticResource CommonTextBlockStyle}"/>
                <TextBlock Text="{Binding CurrentUser.Phone}" 
                           Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Account created: " 
                           Style="{StaticResource CommonTextBlockStyle}"/>
                <TextBlock Text="{Binding DateFormat}" 
                           Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="5">
                
                <Button Content="Edit" 
                        Margin="10,0,5,0" 
                        Command="{Binding EditUserPageCommand}"
                        Style="{StaticResource CommonButtonStyle}" 
                        HorizontalAlignment="Center" 
                        HorizontalContentAlignment="Center" 
                        Width="100"/>
                
                <Button Content="Delete" 
                        Margin="5,0,10,0"
                        
                        Style="{StaticResource CommonButtonStyle}" 
                        HorizontalAlignment="Center" 
                        HorizontalContentAlignment="Center" 
                        Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
