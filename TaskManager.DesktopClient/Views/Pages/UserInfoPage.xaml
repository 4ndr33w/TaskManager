<Page x:Class="TaskManager.DesktopClient.Views.Pages.UserInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.DesktopClient.Views.Pages"
      mc:Ignorable="d"
      HorizontalAlignment="Stretch"
      Title="UserInfoPage">

    <Grid HorizontalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
           
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Email:  " Style="{StaticResource CommonTextBlockStyle}"/>
                <TextBlock Text="{Binding CurrentUser.Email}" Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Status:  " Style="{StaticResource CommonTextBlockStyle}"/>
                <TextBlock Text="{Binding CurrentUser.UserStatus}" Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>

            <Border BorderThickness="0,0,0,1" Style="{StaticResource CommonBorderStyle}" VerticalAlignment="Top"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name:  " Style="{StaticResource CommonTextBlockStyle}"/>
                <TextBlock Text="{Binding CurrentUser.Name}" Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Last Name:  " Style="{StaticResource CommonTextBlockStyle}"/>
                <TextBlock Text="{Binding CurrentUser.LastName}" Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Phone:  " Style="{StaticResource CommonTextBlockStyle}"/>
                <TextBlock Text="{Binding CurrentUser.Phone}" Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Account created: " Style="{StaticResource CommonTextBlockStyle}"/>
                <TextBlock Text="{Binding DateFormat}" Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>



        </StackPanel>
    </Grid>
</Page>
