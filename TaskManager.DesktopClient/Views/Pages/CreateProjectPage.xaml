<Page x:Class="TaskManager.DesktopClient.Views.Pages.CreateProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.DesktopClient.Views.Pages"
      xmlns:importImage="clr-namespace:TaskManager.DesktopClient.Resources.Commands.Common"
      xmlns:taskManagerEnums="clr-namespace:TaskManager.Models.Enums;assembly=TaskManager.Models"
      mc:Ignorable="d" 
      HorizontalAlignment="Stretch"
      Margin="10,0,10,0"
      x:Name="createProjectPage"
      Title="createProjectPage">
    <Page.Resources>
        <importImage:GetPictureOpenFileDialogCommand x:Key="GetPictureOpenFileDialogCommand"/>
        <ObjectDataProvider x:Key="EnumData" MethodName="GetValues" ObjectType="{x:Type taskManagerEnums:ProjectStatus}">
            <ObjectDataProvider.MethodParameters >
                <x:Type TypeName="taskManagerEnums:ProjectStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Page.Resources>

    <StackPanel HorizontalAlignment="Stretch">
        <Grid HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>
            
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Grid.Column="0">
                <Grid Margin="10" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" Margin="0,0,10,0" Style="{StaticResource CommonTextBlockStyle}" HorizontalAlignment="Right"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="ProjectNameTextBox" Text="{Binding NewProject.Model.Name}" Style="{StaticResource CommonTextBoxStyle}" HorizontalAlignment="Stretch"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Width="Auto" Text="Description:" Margin="0,0,10,0" Style="{StaticResource CommonTextBlockStyle}" HorizontalAlignment="Right"/>
                    <TextBox Grid.Row="1" x:Name="ProjectDescriptionTextBox" Grid.Column="1" Text="{Binding NewProject.Model.Description}" Style="{StaticResource MultiLineTextBox}" HorizontalAlignment="Stretch"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Image:" Margin="0,0,10,0" Style="{StaticResource CommonTextBlockStyle}" HorizontalAlignment="Right"/>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Grid.Column="0" Source="{Binding NewProject.Image}"/>
                        <Button Grid.Row="1" 
                                Grid.Column="1" 
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource CommonButtonStyle}" 
                                Command="{StaticResource GetPictureOpenFileDialogCommand}" 
                                CommandParameter="{Binding ElementName=createProjectPage}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Picture}" Height="30" Margin="0,0,10,0"/>
                                <TextBlock Text="Select Picture" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <TextBlock Grid.Row="3" 
                               Grid.Column="0" 
                               Text="Project Status:" 
                               Margin="0,0,10,0" 
                               Style="{StaticResource CommonTextBlockStyle}" 
                               HorizontalAlignment="Right"/>
                    <ComboBox Grid.Row="3" 
                              Grid.Column="1" 
                              Background="Transparent"
                              Foreground="DarkGray"
                              HorizontalAlignment="Stretch"
                              ItemsSource="{Binding Source={StaticResource EnumData}}" 
                              SelectedItem="{Binding SelectedProject.Model.ProjectStatus}"
                              x:Name="ProjectStatusComboBox">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                </Grid>
            </ScrollViewer>


            <Grid Grid.Column="2" Grid.Row="1" Margin="10,5,10,5" MinWidth="250">
                <!--<Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedProject.Model}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>-->
                <StackPanel Margin="5">
                    <Button Grid.Row="2" Content="Select new project admin" Style="{StaticResource CommonButtonStyle}"/>
                    <ListBox Grid.Row="3" x:Name="UsersListBox" HorizontalAlignment="Center" ItemsSource="{Binding Path=UsersInfoCollection}" Background="Transparent" Foreground="White" Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource CommonButtonStyle}" Width="230" HorizontalAlignment="Center" HorizontalContentAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding Image}" Margin="5,0,5,0" Height="15"/>
                                        <TextBlock Style="{StaticResource CommonTextBlockStyle}" Margin="5,0,5,0" Text="{Binding}"/>
                                    </StackPanel>
                                </Button>

                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>
                </StackPanel>
              
            </Grid>


        </Grid>
        <StackPanel Orientation="Horizontal" Margin="0,50,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Cancel" Command="{Binding AbortCreatingPageCommand}" Margin="0,0,10,0" Style="{StaticResource CommonButtonStyle}" Width="100"/>
            <Button Content="OK" Command="{Binding CreateNewProjectCommand}" CommandParameter="{Binding ElementName=CreateEditProjectWindow}" Margin="10,0,0,0" Style="{StaticResource CommonButtonStyle}" Width="100"/>
        </StackPanel>
    </StackPanel>
</Page>
