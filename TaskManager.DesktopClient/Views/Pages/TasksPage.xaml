<Page x:Class="TaskManager.DesktopClient.Views.Pages.TasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.DesktopClient.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TasksPage">

    <Grid>
        <ListView>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Path=Id}"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=Name}"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Path=Description}"/>
                    <GridViewColumn Header="Creator" DisplayMemberBinding="{Binding Path=CreatorId}"/>
                    <GridViewColumn Header="Executor" DisplayMemberBinding="{Binding Path=ExecutorId}"/>
                    <GridViewColumn Header="StartDate" DisplayMemberBinding="{Binding Path=StartDate}"/>
                    <GridViewColumn Header="EndDate" DisplayMemberBinding="{Binding Path=EndDate}"/>
                    <GridViewColumn Header="Desk" DisplayMemberBinding="{Binding Path=DeskId}"/>
                    <GridViewColumn Header="File" DisplayMemberBinding="{Binding Path=File}"/>
                    <GridViewColumn Header="Column" DisplayMemberBinding="{Binding Path=Column}"/>
                    <GridViewColumn Header="Priority" DisplayMemberBinding="{Binding Path=Priority}"/>
                    <GridViewColumn Header="Color" DisplayMemberBinding="{Binding Path=Color}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
