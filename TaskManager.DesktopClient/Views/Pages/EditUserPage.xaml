<Page x:Class="TaskManager.DesktopClient.Views.Pages.EditUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.DesktopClient.Views.Pages"
      mc:Ignorable="d" 
      x:Name="EditUserViewPage"
      Title="EditUserPage">

    <Grid HorizontalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Stretch" 
                    VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal">

                <Image Grid.Column="0" x:Name="mainImage" 
                       Width="200" 
                       Height="200" 
                       Source="{Binding BitmappedImage}">
                    <!--MouseRightButtonDown="{Binding ChangeImageCommand}">-->
                </Image>

                <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Email:  " 
                                   Style="{StaticResource CommonTextBlockStyle}"/>
                        <TextBlock Text="{Binding CurrentUser.Email}" 
                                   Style="{StaticResource CommonTextBlockStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Status:  " 
                                   Style="{StaticResource CommonTextBlockStyle}"/>
                        <TextBlock Text="{Binding CurrentUser.UserStatus}" 
                                   Style="{StaticResource CommonTextBlockStyle}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="change email" Style="{StaticResource CommonButtonStyle}" Padding="5,0,5,0" Margin="5"/>
                        <Button Content="change password" Style="{StaticResource CommonButtonStyle}" Padding="5,0,5,0" Margin="5"/>
                    </StackPanel>
                    <Button Content="change image" Command="{Binding ChangeImageCommand}" Width="196" Style="{StaticResource CommonButtonStyle}"/>
                </StackPanel>
                
            </StackPanel>

            <Border BorderThickness="0,0,0,1" 
                    Style="{StaticResource CommonBorderStyle}" 
                    VerticalAlignment="Top"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name:  " 
                           Style="{StaticResource CommonTextBlockStyle}" 
                           VerticalAlignment="Bottom"/>
                <TextBox Text="{Binding CurrentUser.Name}" 
                           Style="{StaticResource CommonTextBoxStyle}" 
                         x:Name="EditedUserNameTextBox"
                         Padding="45,0,45,0"
                         VerticalAlignment="Top" 
                         VerticalContentAlignment="Top"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Last Name:  " 
                           Style="{StaticResource CommonTextBlockStyle}" VerticalAlignment="Bottom"/>
                <TextBox Text="{Binding CurrentUser.LastName}" 
                           Style="{StaticResource CommonTextBoxStyle}" 
                         Padding="45,0,45,0" 
                         x:Name="EditedUserLastNameTextBox"
                         VerticalAlignment="Top" 
                         VerticalContentAlignment="Top"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Phone:  " 
                           Style="{StaticResource CommonTextBlockStyle}" VerticalAlignment="Bottom"/>
                <TextBox Text="{Binding CurrentUser.Phone}" 
                           Style="{StaticResource CommonTextBoxStyle}" 
                         Padding="45,0,45,0" 
                         x:Name="EditedUserPhoneTextBox"
                         VerticalAlignment="Top" 
                         VerticalContentAlignment="Top"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Account created: " 
                           Style="{StaticResource CommonTextBlockStyle}" VerticalAlignment="Bottom"/>
                <TextBlock Text="{Binding DateFormat}" 
                           Style="{StaticResource CommonTextBlockStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="5">

                <Button Content="Save" 
                        Margin="10,0,5,0" 
                        Style="{StaticResource CommonButtonStyle}"
                        Command="{Binding SaveEditedUserCommand}"
                        CommandParameter="{Binding ElementName=EditUserViewPage}"
                        HorizontalAlignment="Center" 
                        HorizontalContentAlignment="Center" 
                        Width="100"/>

                <Button Content="Cancel" 
                        Margin="5,0,10,0" 
                        Style="{StaticResource CommonButtonStyle}" 
                        HorizontalAlignment="Center" 
                        HorizontalContentAlignment="Center"
                        Command="{Binding OpenMyInfoPageCommand}"
                        Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
